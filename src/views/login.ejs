<!DOCTYPE html>
<html lang="en">

<head>
    <base href="/">
    <%-include('partials/head')%>
        <link href="/static/css/login_style.css" rel="stylesheet">
</head>

<body>
    <%-include('partials/header')%>
        <main>
            <div class="container">
                <div class="container2">
                    <section class="login">
                        <ul class="errores"></ul>
                        <form class="form" action=" /users/login " method="POST ">
                            <h4>Ingresar</h4>

                            <input class="datosingresados1 " id="email" type=" text " name="email" placeholder="Email " />
                            <% if(locals.errorsLogin && locals.errorsLogin.email){ %>
                                <span style="color:red">
                                <%=locals.errorsLogin.email.msg %>
                                    </span>
                                <% } %>

                                    <input class="datosingresados1" id="clave" type="text" name="contraseña " placeholder="Contraseña " />
                                    <% if(locals.errorsLogin && locals.errorsLogin.contraseña){ %>
                                        <span style="color:red">
                                        <%=locals.errorsLogin.contraseña.msg %>
                                            </span>
                                        <% } %>
                                            <br>
                                            <button class="boton1 " type="submit " name=" Ingresar " value="Ingresar">INGRESAR</button><br><br>
                                            <label class="recuerdame" type="checkbox" name="Recuerdame " id=recuerdame>Recuerdame </label><br>
                                            <label class="olvide "><a href="# ">Olvide mi contraseña</a></label>
                                            <br>
                                            <br>
                                            <br>
                        </form>
                        <% if(locals.errorsMsg){ %>
                            <span style="color:red">
                            <%=errorsMsg %></span>
                            <% } %>
                    </section>
                </div>
            </div>
        </main>
        <%-include('partials/footer')%>
            <script src="/static/js/loginValidationFront.js "></script>
</body>

</html>